{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "hours-tracker",
  "version": "0.1.0",
  "identifier": "com.timetracker.hours-tracker",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run export"
  },
  "app": {
    "windows": [
      {
        "title": "Employee Time Tracker",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "minWidth": 1000,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
